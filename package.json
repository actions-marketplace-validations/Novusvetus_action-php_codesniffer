{
  "name": "php_codesniffer",
  "version": "1.2.17",
  "private": true,
  "description": "GitHub PHP_CodeSniffer action. This workflow check the PHP, CSS and Javascript files for the wanted coding standards.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Novusvetus/action-php_codesniffer.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Novusvetus",
  "license": "BSD-3",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "6.0.0",
    "@octokit/webhooks": "13.5.0",
    "picomatch": "4.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/picomatch": "3.0.2",
    "@typescript-eslint/parser": "^8.23.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.19.0",
    "eslint-plugin-github": "^5.1.8",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  }
}
